<section id="faq">
  <div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h1>{{ page.header.title }}<h1>
        </div>
    </div>
    <div class="panel-group" id="faqAccordion"> 
        {% for faq in page.header.frequentlyAskedQuestions %}
            {% if faq.question and faq.answer %}
                <div class="panel panel-default ">
                    <div title="Click to display content" class="panel-heading accordion-toggle question-toggle collapsed" data-toggle="collapse" data-parent="#faqAccordion" data-target="#question{{loop.index}}">
                        <h2 class="panel-title">
                            <span class="pull-right label label-primary" style="margin-top: 0;">âŒ„</span>
                            <a href="javascript:;"><strong>{{ faq.question }}</strong></a>
                        </h2>
                    </div>
                    <div id="question{{loop.index}}" class="panel-collapse collapse" style="height: 0px;">
                        <div class="panel-body">
                            <p>{{ faq.answer }}</p>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
    <div class="row">
        <div class="col-lg-12 text-center">
            {{ content }}
        </div>
    </div>
</div>
</section>
